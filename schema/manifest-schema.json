{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bache-archive.org/schema/manifest.json",
  "title": "Bache Archive Manifest",
  "type": "object",
  "required": ["archival_title", "recorded_date", "source_type", "entities", "provenance"],
  "properties": {
    "archival_title": { "type": "string", "minLength": 1 },
    "recorded_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "source_type": { "type": "string", "enum": ["lecture", "interview", "book", "educational_doc"] },
    "entities": {
      "type": "object",
      "properties": {
        "author_wikidata_qid": { "type": "string", "pattern": "^Q\\d+$" },
        "work_wikidata_qid": { "type": "string", "pattern": "^Q\\d+$" }
      },
      "required": ["author_wikidata_qid"]
    },
    "provenance": {
      "type": "object",
      "required": ["manifest_hash"],
      "properties": {
        "manifest_hash": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" },
        "sameAs": { "type": "array", "items": { "type": "string", "format": "uri" } }
      }
    }
  },
  "additionalProperties": true
}
